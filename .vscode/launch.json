{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch index.html",
            "type": "firefox",
            "request": "launch",
            "reAttach": false,
            "file": "${workspaceFolder}/index.html",
            "reloadOnChange": {
                "watch": [ "${workspaceFolder}/**/*.js", "${workspaceFolder}/**/*.html" ],
                "ignore": [ "${workspaceFolder}/node_modules/**" ]
            }
        }
    ]
}